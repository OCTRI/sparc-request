.modal-dialog{ role: 'document' }
  .modal-content
    = form_for @visit_group, remote: true do |f|
      = hidden_field_tag :admin, params[:admin]
      = hidden_field_tag :review, params[:review]
      = hidden_field_tag :merged, params[:merged]
      = hidden_field_tag :consolidated, params[:consolidated]
      = hidden_field_tag :tab, params[:tab]
      = hidden_field_tag :page, params[:page]
      = hidden_field_tag :pages, params[:pages]
      .modal-header
        %h3.modal-title
          = t('visit_groups.edit')
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-row
          .form-group.col-4
            = f.label :window_before, class: 'required', title: t(:calendars)[:tooltips][:window_before], data: { toggle: 'tooltip' }
            = f.text_field :window_before, class: 'form-control'
          .form-group.col-4
            = f.label :day, class: 'required', title: t(:calendars)[:tooltips][:visit_day], data: { toggle: 'tooltip' }
            = f.text_field :day, class: 'form-control'
          .form-group.col-4
            = f.label :window_after, class: 'required', title: t(:calendars)[:tooltips][:window_after], data: { toggle: 'tooltip' }
            = f.text_field :window_after, class: 'form-control'
        .form-group
          = f.label :name, class: 'required', title: t(:calendars)[:tooltips][:visit_name], data: { toggle: 'tooltip' }
          = f.text_field :name, class: 'form-control'
      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t('actions.close')
        = f.submit t('actions.submit'), class: 'btn btn-primary'
