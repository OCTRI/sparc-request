.modal-dialog{ role: 'document' }
  .modal-content
    = form_for visit_group, remote: true do |f|
      = hidden_field_tag :srid, service_request.try(:id)
      = hidden_field_tag :tab, params[:tab]
      = hidden_field_tag :page, params[:page]
      - params[:pages].each do |arm_id, page|
        = hidden_field_tag "pages[#{arm_id}]", page.to_i
      .modal-header
        %h3.modal-title
          = t('visit_groups.edit')
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-row
          .form-group.col-4
            = f.label :window_before, class: 'required'
            = f.number_field :window_before, class: 'form-control', min: 0
          .form-group.col-4
            - min = visit_group.higher_items.where.not(day: nil).maximum(:day).try(:+, 1)
            - max = visit_group.lower_items.where.not(day: nil).minimum(:day).try(:-, 1)
            = f.label :day, class: 'required'
            = f.number_field :day, class: 'form-control', min: min, max: max
            - if min || max
              %small.form-text.text-muted
                - if min
                  = t('constants.min', min: min)
                - if max
                  = t('constants.max', max: max)
          .form-group.col-4
            = f.label :window_after, class: 'required'
            = f.number_field :window_after, class: 'form-control', min: 0
        .form-group
          = f.label :name, class: 'required'
          = f.text_field :name, class: 'form-control'
      .modal-footer
        %button.btn.btn-secondary{ type: 'button', data: { dismiss: 'modal' } }
          = t('actions.close')
        = f.submit t('actions.submit'), class: 'btn btn-primary'
