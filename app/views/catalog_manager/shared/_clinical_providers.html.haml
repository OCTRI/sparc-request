- if organization.clinical_providers
  .form-group.row
    .col-sm-8
      %h5= t(:catalog_manager)[:organization_form][:fulfillment][:name_email]
    .col-sm-4.text-center
      %h5= t(:catalog_manager)[:organization_form][:fulfillment][:remove_add]

  - organization.clinical_providers.each do |cp|
    .form-group.row{ id: "fulfillment-rights-row-#{cp.identity_id}", data: { identity_id: cp.identity_id } }
      .col-sm-8
        %p= cp.identity.display_name
      .col-sm-4.text-center
        %button.btn.btn-xs.btn-danger.remove-clinical-provider{ data: { identity_id: cp.identity_id, organization_id: organization.id } }
          %span.glyphicon.glyphicon-remove

.form-group.row
  .col-sm-8
    = text_field_tag 'new_clinical_provider', '', class: 'form-control', id: "fulfillment-rights-query"
  .col-sm-4.text-center
    %button.btn.btn-xs.btn-success.add-clinical-provider{ data: { organization_id: organization.id } }
      %span.glyphicon.glyphicon-plus

