%tr{ id: "user-rights-row-#{ur.id}", data: { identity_id: ur.id } }
  %td
    = "#{ur.full_name}, #{ur.email}"
  %td.text-center
    = check_box_tag :super_user, '', !get_user_rights(user_rights[:super_users], ur.id).nil?, { class: "super-user-checkbox", data: { identity_id: ur.id, organization_id: organization.id } }
  %td.cm-cell
    .form-check.text-center
      = check_box_tag :catalog_manager, '', !get_user_rights(user_rights[:catalog_managers], ur.id).nil?, { class: "catalog-manager-checkbox", data: { identity_id: ur.id, organization_id: organization.id } }
    .form-check
      = check_box_tag :edit_historic_data, '', get_user_rights(user_rights[:catalog_managers], ur.id).try(:edit_historic_data), { id: "cm-edit-historic-data-#{ur.id}", class: "cm-edit-historic-data", disabled: get_user_rights(user_rights[:catalog_managers], ur.id).nil?, data: { identity_id: ur.id, organization_id: organization.id } }
      = t(:catalog_manager)[:organization_form][:user_rights][:edit_historic_data]
  - unless organization.type == "Institution"
    %td
      .form-check.text-center
        = check_box_tag :service_provider, '', !get_user_rights(user_rights[:service_providers], ur.id).nil?, { class: "service-provider-checkbox", data: { identity_id: ur.id, organization_id: organization.id } }
      .form-check  
        = check_box_tag :is_primary_contact, '', get_user_rights(user_rights[:service_providers], ur.id).try(:is_primary_contact), { id: "sp-is-primary-contact-#{ur.id}", class: "sp-is-primary-contact", disabled: get_user_rights(user_rights[:service_providers], ur.id).nil?, data: { identity_id: ur.id, organization_id: organization.id } }
        = t(:catalog_manager)[:organization_form][:user_rights][:primary_contact]
      .form-check
        = check_box_tag :hold_emails, '', get_user_rights(user_rights[:service_providers], ur.id).try(:hold_emails), { id: "sp-hold-emails-#{ur.id}", class: "sp-hold-emails", disabled: get_user_rights(user_rights[:service_providers], ur.id).nil?, data: { identity_id: ur.id, organization_id: organization.id } }
        = t(:catalog_manager)[:organization_form][:user_rights][:hold_emails]
    - if organization.tag_list.include?('clinical work fulfillment')
      %td.text-center
        = check_box_tag :clinical_provider, '', !get_user_rights(user_rights[:clinical_providers], ur.id).nil?, { class: "clinical-provider-checkbox", data: { identity_id: ur.id, organization_id: organization.id } }
  %td.text-center
    %button.btn.btn-xs.btn-danger.remove-user-rights{ data: { identity_id: ur.id, organization_id: organization.id } }
      %span.glyphicon.glyphicon-remove
