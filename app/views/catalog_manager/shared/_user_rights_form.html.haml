= form_for organization, url: path, id: 'organization-user-rights-form', remote: true do |f|
  %table.table.table-condensed.table-bordered
    %thead
      %tr
        %th.col-sm-3 Name, Email
        %th.col-sm-1 Supser User
        %th.col-sm-3 Catalog Manager
        - unless organization.type == "Institution"
          %th.col-sm-3 Service Provider
          - if organization.tag_list.include?("clinical work fulfillment")
            %th.col-sm-1 Clinical Provider
        %th.col-sm-1.text-center Remove
    %tbody
      - user_rights(organization).each_with_index do |ur, index|
        %tr
          %td
            = ur.full_name
            = ur.email
          %td
            = f.check_box "", { class: "super-user-checkbox", checked: ur.is_super_user_for?(organization), data: { identity_id: ur.id, organization_id: organization.id } }
          %td
            .form-check
              = f.check_box "", { class: "catalog-manager-checkbox", checked: ur.is_catalog_manager_for?(organization), data: { identity_id: ur.id, organization_id: organization.id } }
            .form-check
              = f.check_box "", { class: "cm-edit-historic-data", checked: can_edit_historic_data?(organization, ur) }
              Can Edit Historical Data
          - unless organization.type == "Institution"
            %td
              .form-check
                = f.check_box "", { class: "service-provider-checkbox", checked: ur.is_service_provider_for?(organization), data: { identity_id: ur.id, organization_id: organization.id } }
              .form-check  
                = f.check_box "", { class: "sp-is-primary-contact", checked: is_primary_contact?(organization, ur) }
                Primary Contact
              .form-check
                = f.check_box "", { class: "sp-hold-emails", checked: hold_emails?(organization, ur) }
                Hold Emails
            - if organization.tag_list.include?("clinical work fulfillment")
              %td
                = f.check_box "", { class: "clinical-provider-checkbox", checked: ur.is_clinical_provider_for?(organization), data: { identity_id: ur.id, organization_id: organization.id } }
          %td.text-center
            %button.btn.btn-xs.btn-danger
              %span.glyphicon.glyphicon-remove
  %input.btn.btn-primary{ type: 'submit'}