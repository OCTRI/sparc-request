- organization.services.select{ |serv| @service ? serv == @service : true && serv.is_available != false && serv.current_pricing_map }.each do |service|

  .w-100.service
    .row
      %div{ class: action_name == 'protocol' ? 'col-12' : 'col-10' }
        %h5.mb-0
          - if service.description.present?
            = link_to service.display_service_name, 'javascript:void(0)', data: { toggle: 'popover', title: service.display_service_name, content: raw(service.description), placement: 'left', trigger: 'hover' }
          - else
            = service.display_service_name
        = cpt_code_text(service)
        = eap_id_text(service)
      - unless action_name == 'protocol'
        .col-2.text-right
          = link_to add_service_service_request_path(srid: service_request.id, service_id: service.id), remote: true, method: :post, title: t('proper.cart.add_service'), class: 'btn btn-success', data: { toggle: 'tooltip', placement: 'right' } do
            = icon('fas', 'plus')
      = raw service_pricing_text(service)
