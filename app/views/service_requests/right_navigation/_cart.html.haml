.card#cart
  = hidden_field_tag :line_item_count, service_request.line_items.count
  .card-header.bg-light.justify-content-center
    %h4.mb-0<
      = t(:proper)[:cart][:header]
      = icon('fas', 'shopping-cart ml-1')
  .card-header.p-0
    %button.btn.btn-default.col-sm-6.active{ data: { tab: 'active' } }
      = t(:proper)[:cart][:tab_headers][:open]
    %button.btn.btn-default.col-sm-6{ data: { tab: 'complete' } }
      = t(:proper)[:cart][:tab_headers][:complete]
  .card-body
    .list-group.ssr-tab.active-ssrs
      = render 'service_requests/right_navigation/cart_sub_service_requests', service_request: service_request, sub_service_requests: sub_service_requests[:active], allow_delete: allow_delete, tab: 'active'
    .list-group.ssr-tab.complete-ssrs.hidden
      = render 'service_requests/right_navigation/cart_sub_service_requests', service_request: service_request, sub_service_requests: sub_service_requests[:complete], allow_delete: allow_delete, tab: 'complete'

