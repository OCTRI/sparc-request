- sub_service_requests  = service_request.cart_sub_service_requests
- allow_delete        ||= true

.col-3.pl-md-0#cart
  .card#cartCard
    .card-header.bg-light
      %h4.mb-0<
        = icon('fas', 'shopping-cart mr-2')
        = t(:proper)[:cart][:header]
    .card-header.p-0
      %button.btn.btn-lg.btn-light.rounded-0.w-50.cart-toggle.active{ data: { target: '#activeServices' } }
        = t(:proper)[:cart][:tab_headers][:current]
      %button.btn.btn-lg.btn-light.rounded-0.w-50.cart-toggle.col-6{ data: { target: '#completedServices' } }
        = t(:proper)[:cart][:tab_headers][:complete]
    .card-body.p-0
      .list-group.list-group-flush.cart-services#activeServices
        - if sub_service_requests[:active].any?
          = render 'service_requests/cart/cart_sub_service_requests', service_request: service_request, sub_service_requests: sub_service_requests[:active], allow_delete: allow_delete, tab: 'active'
        - else
          %h5.alert.alert-danger.text-center.rounded-0.mb-0
            = t(:proper)[:cart][:no_active_services_message]
      .list-group.list-group-flush.cart-services.d-none#completedServices
        - if sub_service_requests[:complete].any?
          = render 'service_requests/cart/cart_sub_service_requests', service_request: service_request, sub_service_requests: sub_service_requests[:complete], allow_delete: allow_delete, tab: 'complete'
        - else
          %h5.alert.alert-danger.text-center.rounded-0.mb-0
            = t(:proper)[:cart][:no_complete_services_message]
