- line_items = Dashboard::ServiceCalendars.otf_line_items_to_display(service_request, sub_service_request, merged: merged, consolidated: consolidated, show_draft: @show_draft)

.card.one-time-fees-container
  .card-header.bg-primary.text-white.justify-content-between
    %h3.mb-0
      = t('calendars.otf.header')
    - unless review
      = render 'service_calendars/master_calendar/otf/otf_freeze_header_button', line_items: line_items
  %table.table.table-bordered.service-calendar-table{ class: @scroll_true ? "scrolling-table" : "non-scrolling-table" }
    %thead{ class: @scroll_true ? "scrolling-thead" : "" }
      = render 'service_calendars/master_calendar/otf/otf_header'
    %tbody{ class: @scroll_true ? "scrolling-div" : "" }
      = render 'service_calendars/master_calendar/otf/otf_line_items', service_request: service_request, review: review, admin: admin, merged: merged, line_items: line_items
