= form_for protocol, as: :protocol, remote: true, html: { autocomplete: 'off' } do |f|
  = hidden_field_tag :srid, service_request.id
  = f.hidden_field :type
  = f.hidden_field :requester_id, value: current_user.id

  - if protocol.type.capitalize == "Study"
    = hidden_field_tag :epic_config, Setting.get_value("use_epic")
    = render 'protocols/form/study_fields', f: f, protocol: protocol, rmid_server_down: rmid_server_down
  - elsif protocol.type.capitalize == "Project"
    = render 'protocols/form/project_fields', f: f, protocol: protocol
  - if protocol.new_record?
    = render 'protocols/form/project_roles_fields', f: f, protocol: protocol

    = f.submit t(:actions)[:save], class: 'btn btn-lg btn-success',data: { disable_with: t(:proper)[:navigation][:bottom][:saving] }
    = link_to t(:actions)[:cancel], protocol_service_request_path(srid: service_request.id), class: 'btn btn-lg btn-danger'
