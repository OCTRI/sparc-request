.container
  %aside.form-navigation.d-none.d-xl-block
    .card.sticky-top
      .card-header
        %h3.w-100.text-center.mb-0
          = t('protocols.form.navigation.header')
      .card-body.p-0
        %nav.flex-column.text-center#protocolNavigation
          - if protocol.is_a?(Study) && Setting.get_value('research_master_enabled')
            = link_to Protocol.human_attribute_name(:research_master_id), '#protocolHeader', class: 'nav-link h5'
          = link_to t('protocols.form.information.header'), '#protocolInformation', class: 'nav-link h5'
          = link_to t('protocols.form.financial_information.header'), '#financialInformation', class: 'nav-link h5'

  %main.col-8.mx-auto
    = form_for protocol, as: :protocol, remote: true, html: { autocomplete: 'off', id: 'protocolForm' } do |f|
      = hidden_field_tag :srid, service_request.id
      = f.hidden_field :type
      = f.hidden_field :requester_id, value: current_user.id

      = render 'protocols/form/header', f: f, protocol: protocol, rmid_server_down: rmid_server_down
      = render 'protocols/form/protocol_information', f: f, protocol: protocol
      = render 'protocols/form/financial_information', f: f, protocol: protocol

      %footer.pt-3
        .card
          .card-body.p-3
            .form-group.mb-0<
              = link_to protocol_service_request_path(srid: service_request.id), class: 'btn btn-lg btn-link px-0' do
                - succeed t('actions.cancel') do
                  = icon('fas', 'arrow-left mr-2')
              = f.button type: 'submit', class: 'btn btn-lg btn-outline-success float-right', data: { disable_with: t(:proper)[:navigation][:bottom][:saving] } do
                - succeed icon('fas', 'arrow-right ml-2') do
                  = t('actions.save')
