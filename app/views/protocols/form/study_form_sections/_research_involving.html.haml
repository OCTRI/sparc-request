.panel.panel-default
  .panel-heading.flex-column
    %h4.panel-title
      = t(:protocols)[:studies][:research_involving][:header]
    = t(:protocols)[:studies][:research_involving][:subtext]
  .panel-body
    = f.fields_for :research_types_info do |ff_rti|
      .form-group.row.human_subjects
        = ff_rti.label :human_subjects, t(:protocols)[:studies][:research_involving][:humans][:header], class: 'col-lg-2 control-label'
        .col-lg-1
          = ff_rti.check_box :human_subjects, class: 'form-control human-subjects'

      / Human Subjects selected begin
      .human_subjects_dependent{ display_if(ff_rti.object.human_subjects) }
        = f.fields_for :human_subjects_info do |ff_hsi|
          .form-group.row.nct-number
            = ff_hsi.label :nct_number,
              t(:protocols)[:studies][:research_involving][:humans][:nct_number],
              class: 'col-lg-2 control-label',
              data: { toggle: 'tooltip', placement: 'right' },
              title: t(:protocols)[:tooltips][:nct_number]
            .col-lg-10
              = ff_hsi.text_field :nct_number, class: 'form-control'

          .form-group.row
            = ff_hsi.label :pro_number, t(:protocols)[:studies][:research_involving][:humans][:pro_number], class: 'col-lg-2 control-label', data: { toggle: 'tooltip', placement: 'right' }, title: t(:protocols)[:tooltips][:pro_number]
            .col-lg-10
              = ff_hsi.text_field :pro_number, class: ['form-control', Setting.get_value("research_master_enabled") ? 'rm-id-dependent rm-locked-fields hr-field' : '']

          .form-group.row
            = ff_hsi.label :irb_of_record, t(:protocols)[:studies][:research_involving][:humans][:record_irb], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_hsi.text_field :irb_of_record, class: 'form-control'

          .form-group.row
            = ff_hsi.label :submission_type, t(:protocols)[:studies][:research_involving][:humans][:submission_type], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_hsi.select :submission_type, options_for_select(PermissibleValue.get_inverted_hash('submission_type'), protocol.human_subjects_info.submission_type), { include_blank: t(:protocols)[:prompts][:submission_type] }, class: 'selectpicker'

          .form-group.row.approval_pending
            = ff_hsi.label :approval_pending, t(:protocols)[:studies][:research_involving][:humans][:pending_approval], class: 'col-lg-2 control-label'
            .col-lg-1
              = ff_hsi.check_box :approval_pending, class: 'form-control'

          .form-group.row.initial_irb_approval_date
            = ff_hsi.label :initial_irb_approval_date, t(:protocols)[:studies][:research_involving][:humans][:initial_irb_approval_date], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_hsi.text_field :initial_irb_approval_date, class: ['datetimepicker form-control', Setting.get_value("research_master_enabled") ? 'rm-id-dependent rm-locked-fields hr-field' : ''], value: (protocol.human_subjects_info.initial_irb_approval_date.strftime('%_m/%d/%Y') rescue nil)

          .form-group.row.irb_approval_date
            = ff_hsi.label :irb_approval_date, t(:protocols)[:studies][:research_involving][:humans][:irb_approval_date], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_hsi.text_field :irb_approval_date, class: ['datetimepicker form-control', Setting.get_value("research_master_enabled") ? 'rm-id-dependent rm-locked-fields hr-field' : ''], value: (protocol.human_subjects_info.irb_approval_date.strftime('%_m/%d/%Y') rescue nil)

          .form-group.row.irb_expiration_date
            = ff_hsi.label :irb_expiration_date, t(:protocols)[:studies][:research_involving][:humans][:irb_expiration_date], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_hsi.text_field :irb_expiration_date, class: ['datetimepicker form-control', Setting.get_value("research_master_enabled") ? 'rm-id-dependent rm-locked-fields hr-field' : ''], value: (protocol.human_subjects_info.irb_expiration_date.strftime('%_m/%d/%Y') rescue nil)

          .form-group.row
            = f.label :study_phase, t(:protocols)[:studies][:information][:phase], class: 'col-lg-2 control-label'
            .col-lg-10
              = f.collection_select :study_phase_ids, StudyPhase.v1, :id, :phase, { include_blank: t(:protocols)[:prompts][:phase] }, class: 'selectpicker', title: t(:protocols)[:prompts][:phase], multiple: true
      / Human Subjects selected end

      .form-group.row.vertebrate_animals
        = ff_rti.label :vertebrate_animals, t(:protocols)[:studies][:research_involving][:vertebrates][:header], class: 'col-lg-2 control-label'
        .col-lg-1
          = ff_rti.check_box :vertebrate_animals, class: 'form-control'

      / Vertebrate Animals selected begin
      .vertebrate_animals_dependent{ display_if(ff_rti.object.vertebrate_animals) }
        = f.fields_for :vertebrate_animals_info do |ff_vai|
          .form-group.row
            = ff_vai.label :iacuc_number, t(:protocols)[:studies][:research_involving][:vertebrates][:iacuc_number], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_vai.text_field :iacuc_number, class: 'form-control'

          .form-group.row
            = ff_vai.label :name_of_iacuc, t(:protocols)[:studies][:research_involving][:vertebrates][:iacuc_name], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_vai.text_field :name_of_iacuc, class: 'form-control'

          .form-group.row
            = ff_vai.label :iacuc_approval_date, t(:protocols)[:studies][:research_involving][:vertebrates][:iacuc_approval_date], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_vai.text_field :iacuc_approval_date, class: 'datetimepicker form-control', value: (protocol.vertebrate_animals_info.iacuc_approval_date.strftime('%_m/%d/%Y') rescue nil)

          .form-group.row
            = ff_vai.label :iacuc_expiration_date, t(:protocols)[:studies][:research_involving][:vertebrates][:iacuc_expiration_date], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_vai.text_field :iacuc_expiration_date, class: 'datetimepicker form-control', value: (protocol.vertebrate_animals_info.iacuc_expiration_date.strftime('%_m/%d/%Y') rescue nil)
      / Vertebrate Animals selected end

      .form-group.row.investigational_products
        = ff_rti.label :investigational_products, t(:protocols)[:studies][:research_involving][:products][:header], class: 'col-lg-2 control-label'
        .col-lg-1
          = ff_rti.check_box :investigational_products, class: 'form-control'

      / Investigational Products selected begin
      .investigational_products_dependent{ display_if(ff_rti.object.investigational_products) }
        = f.fields_for :investigational_products_info do |ff_ipi|
          .form-group.row
            = ff_ipi.label :ind_number,
              t(:protocols)[:studies][:research_involving][:products][:ind_number],
              class: 'col-lg-2 control-label',
              data: { toggle: 'tooltip', placement: 'right' },
              title: t(:protocols)[:tooltips][:ind_number]
            .col-lg-10
              = ff_ipi.text_field :ind_number, class: 'form-control'

          .form-group.row#ind-on-hold-group{ display_if(!ff_ipi.object.ind_number.blank?) }
            = ff_ipi.label :ind_on_hold,
              t(:protocols)[:studies][:research_involving][:products][:ind_on_hold], class: 'col-lg-2 control-label'
            .col-lg-1
              = ff_ipi.check_box :ind_on_hold, class: 'form-control'

          - InvestigationalProductsInfo::EXEMPTION_TYPES.each_with_index do |exemption_type, n|
            / Hide radio button for no exemption. There's a clear button for that.
            .form-group.row.inv-device{ class: ("hidden" unless exemption_type.present?) }
              = ff_ipi.label "exemption_type_#{exemption_type}",
                t(:protocols)[:studies][:research_involving][:products][:numbers][exemption_type.to_sym],
                class: 'col-lg-2 control-label',
                data: { toggle: 'tooltip', placement: 'right' },
                title: t(:protocols)[:tooltips][exemption_type.to_sym]
              .col-lg-1.text-center
                = ff_ipi.radio_button :exemption_type, exemption_type, class: "form-control exemption-radio", data: { type: exemption_type }
              - if exemption_type == ff_ipi.object.exemption_type
                .col-lg-9.inv-device-number-field
                  = ff_ipi.text_field :inv_device_number, class: "form-control"
          .form-group.row
            .col-sm-2
              %button.btn.btn-danger.clear-inv-device-number-button.pull-right
                = t(:protocols)[:studies][:research_involving][:products][:clear]
      / Investigational Products selected end

      .form-group.row.ip_patents
        = ff_rti.label :ip_patents, t(:protocols)[:studies][:research_involving][:ip_patents][:header], class: 'col-lg-2 control-label'
        .col-lg-1
          = ff_rti.check_box :ip_patents, class: 'form-control'

      / IP/Patents selected begin
      .ip_patents_dependent{ display_if(ff_rti.object.ip_patents) }
        = f.fields_for :ip_patents_info do |ff_ipi|
          .form-group.row
            = ff_ipi.label :patent_number, t(:protocols)[:studies][:research_involving][:ip_patents][:number], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_ipi.text_field :patent_number, class: 'form-control'

          .form-group.row
            = ff_ipi.label :inventors, t(:protocols)[:studies][:research_involving][:ip_patents][:inventors], class: 'col-lg-2 control-label'
            .col-lg-10
              = ff_ipi.text_area :inventors, class: 'form-control'
      / IP/Patents selected end
