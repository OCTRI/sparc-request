%section.mb-5#protocolInformation
  %h4.pb-2.mb-3.border-bottom
    = t('protocols.form.information.header', protocol_type: protocol.model_name.human)

  .form-row
    .form-group.col-6
      = f.label :title, class: 'required', title: t(:protocols)[:tooltips][:title], data: { toggle: 'tooltip', placement: 'right' }
      = f.text_field :title, class: [('form-control'), (protocol.is_a?(Study) && Setting.get_value("research_master_enabled") ? 'rm-id-dependent rm-locked-fields' : '')], disabled: Setting.get_value("research_master_enabled") && protocol.research_master_id.present?
    .form-group.col-6
      = f.label :short_title, class: 'required', title: t(:protocols)[:tooltips][:short_title], data: { toggle: 'tooltip', placement: 'right' }
      = f.text_field :short_title, class: [('form-control'), (Protocol.is_a?(Study) && Setting.get_value("research_master_enabled") ? 'rm-id-dependent rm-locked-fields' : '')], disabled: Setting.get_value("research_master_enabled") && protocol.research_master_id.present?

  - if protocol.is_a?(Project)
    .form-group
      = f.label :brief_description
      = f.text_area :brief_description, class: 'form-control', rows: 6

  - if protocol.is_a?(Study)
    .form-row
      .form-group.col-6
        = f.label :guarantor_contact
        = f.text_field :guarantor_contact, class: 'form-control'
      .form-group.col-3
        = f.label :guarantor_phone
        .input-group
          = f.phone_field :guarantor_phone, class: 'form-control'
          .input-group-append
            %span.input-group-text
              = icon('fas', 'phone')
      .form-group.col-3
        = f.label :guarantor_email
        .input-group
          = f.email_field :guarantor_email, class: 'form-control'
          .input-group-append
            %span.input-group-text
              = icon('far', 'envelope')

  .form-row
    .form-group.col-3
      = f.label :funding_status, class: 'required', title: t(:protocols)[:tooltips][:funding_status], data: { toggle: 'tooltip', placement: 'right' }
      = f.select :funding_status,options_for_select(PermissibleValue.get_inverted_hash('funding_status'), protocol.funding_status), { include_blank: true }, class: 'selectpicker form-control'
    .form-group.col-3#fundingSourceContainer{ class: protocol.new_record? || protocol.funded? ? '' : 'd-none' }
      = f.label :funding_source, class: 'required', title: t(:protocols)[:tooltips][:funding_source], data: { toggle: 'tooltip', placement: 'right' }
      = f.select :funding_source,options_for_select(PermissibleValue.get_inverted_hash('funding_source'), protocol.funding_source), { include_blank: true }, class: 'selectpicker form-control'
    .form-group.col-3#potentialFundingSourceContainer{ class: protocol.pending_funding? ? '' : 'd-none' }
      = f.label :potential_funding_source, class: 'required', title: t(:protocols)[:tooltips][:potential_funding_source], data: { toggle: 'tooltip', placement: 'right' }
      = f.select :potential_funding_source, options_for_select(PermissibleValue.get_inverted_hash('potential_funding_source'), protocol.potential_funding_source), { include_blank: true }, class: 'selectpicker form-control'
    .form-group.col-3#fundingSourceOtherContainer{ class: protocol.internally_funded? ? '' : 'd-none' }
      = f.label :funding_source_other, t('protocols.form.information.specify_funding_source'), class: 'required'
      = f.text_field :funding_source_other, class: 'form-control'
    - if protocol.is_a?(Project) && Setting.get_value('use_indirect_cost')
      .form-group.col-3#indirectCostRateContainer
        = f.label :indirect_cost_rate
        = f.text_field :indirect_cost_rate, class: 'form-control'

  - if protocol.is_a?(Study)
    .form-group
      = f.label :sponsor_name, class: 'required', title: t(:protocols)[:tooltips][:sponsor_name], data: { toggle: 'tooltip', placement: 'right' }
      = f.text_field :sponsor_name, class: 'form-control'

  - if protocol.is_a?(Study) && Setting.get_value("use_epic")
    .form-group
      = f.label :selected_for_epic, class: 'required', title: t(:protocols)[:tooltips][:epic], data: { toggle: 'tooltip', placement: 'right' }
      .d-block
        .form-check.form-check-inline
          = f.radio_button :selected_for_epic, true, class: 'form-check-input'
          = f.label "selected_for_epic_true", t('constants.yes_select'), class: 'form-check-label'
        .form-check.form-check-inline
          = f.radio_button :selected_for_epic, false, class: 'form-check-input'
          = f.label "selected_for_epic_false", t('constants.no_select'), class: 'form-check-label'

  - if protocol.is_a?(Study)
    = render 'protocols/form/study_type_questions', f: f, protocol: protocol
  - if Setting.get_value('use_epic')
    = render 'protocols/form/study_type_note', f: f, protocol: protocol
