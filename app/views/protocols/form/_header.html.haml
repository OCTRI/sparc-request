%section.pt-3#protocolHeader
  .card
    .card-body{ class: protocol.is_a?(Study) && Setting.get_value('research_master_enabled') ? 'p-5' : 'p-3' }
      %h1.text-primary.text-center{ class: protocol.is_a?(Study) ? 'mb-5' : '' }
        = t("protocols.form.header.#{action_name}", protocol_type: protocol.model_name.human)

      - if protocol.is_a?(Study) && Setting.get_value('research_master_enabled')
        = render 'protocols/form/research_master_id', f: f, protocol: protocol, rmid_server_down: rmid_server_down
