.card
  .card-header.justify-content-between.bg-primary.text-white
    %h3.mb-0
      - if service_request.previously_submitted?
        = link_to '#protocolSummary', data: { toggle: 'collapse' } do
          = icon('fas', 'caret-down m-1 pr-2')
          = I18n.t('protocols.summary.header', protocol_type: protocol_type)
      - else
        = I18n.t('protocols.summary.header', protocol_type: protocol_type)
    .protocol-links-container
      = link_to I18n.t('protocols.view_details.button', protocol_type: protocol_type), protocol_path(protocol, srid: service_request.id), remote: true, class: 'btn btn-info'
      - if action_name == 'protocol'
        = link_to I18n.t('protocols.edit', protocol_type: protocol_type), edit_protocol_path(protocol, srid: service_request.id), class: 'btn btn-warning'
  - if @errors
    .card-body
      %h4.text-danger
        = t(:validation_errors)[:service_requests][:protocol_errors]
      = render 'layouts/modal_errors', errors: @errors
  .collapse#protocolSummary{ class: service_request.previously_submitted? ? '' : 'show' }
    %table.table.mb-0
      - if Setting.get_value("research_master_enabled") && protocol.is_study?
        %tr
          %td.col-2
            %label.mb-0
              = Protocol.human_attribute_name(:research_master_id)
          %td.col-10
            = protocol.research_master_id.present? ? protocol.research_master_id : t('constants.na')
      %tr
        %td.col-2
          %label.mb-0
            = protocol.class.human_attribute_name(:id)
        %td.col-10
          = protocol.try(:id)
      %tr
        %td.col-2
          %label.mb-0{ title: t(:protocols)[:tooltips][:title], data: { toggle: 'tooltip', placement: 'right' } }
            = protocol.class.human_attribute_name(:title)
        %td.col-10
          = protocol.try(:title)
          = display_rmid_validated_protocol(protocol, t('protocols.summary.rmid_title'))
      %tr
        %td.col-2
          %label.mb-0{ title: t(:protocols)[:tooltips][:short_title], data: { toggle: 'tooltip', placement: 'right' } }
            = Protocol.human_attribute_name(:short_title)
        %td.col-10
          = protocol.short_title
          = display_rmid_validated_protocol(protocol, t('protocols.summary.rmid_short_title'))
      - if protocol_type == 'Study'
        %tr
          %td.col-2
            %label.mb-0{ title: t(:protocols)[:tooltips][:sponsor_name], data: { toggle: 'tooltip', placement: 'right' } }
              = Protocol.human_attribute_name(:sponsor_name)
          %td.col-10
            = protocol.sponsor_name
      %tr
        %td.col-2
          %label.mb-0{ title: protocol.funded? ? t(:protocols)[:tooltips][:funding_source] : t(:protocols)[:tooltips][:potential_funding_source], data: { toggle: 'tooltip', placement: 'right' } }
            = Protocol.human_attribute_name(protocol.funded? ? :funding_source : :potential_funding_source)
        %td.col-10
          = protocol.display_funding_source_value
