.modal-dialog.modal-lg{ role: 'document' }
  .modal-content
    .modal-header
      %h3.modal-title
        = notification_subject_line(notification, false)
      %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
        %span{ aria: { hidden: 'true' } } &times;
    .modal-body
      - if messages.any?
        - messages.each do |message|
          .card-callout.w-75{ class: message.from == current_user.id ? 'card-callout-right callout-secondary float-right' : 'callout-info' }
            .card-body
              %h5.card-title.mb-2
                = message.sender.full_name
              .card-text.mb-2
                = simple_format(message.body)
              %small.card-text.text-muted
                = format_datetime(message.created_at)

      -else
        .text-center
          = t(:dashboard)[:messages][:index][:no_messages]
    #reply-block.modal-footer.justify-content-end
      %button.btn.btn-secondary.mr-1{type: 'button', data: {dismiss: 'modal'}}
        = t(:actions)[:close]
      = link_to t(:actions)[:reply], new_dashboard_message_path(notification_id: notification.id), remote: true, class: 'btn btn-primary'
