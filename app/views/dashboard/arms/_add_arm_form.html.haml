.modal-dialog{ role: 'document' }
  .modal-content
    = form_for arm, url: dashboard_arms_path(arm), remote: true do |f|
      .modal-header
        %h3.modal-title
          = t(:arms)[:new]
        %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { label: t('actions.close') } }
          %span{ aria: { hidden: 'true' } } &times;
      .modal-body
        .form-group
          = f.label :name, class: "col-sm-4 control-label required", title: t(:arms)[:name_tooltip], data: { toggle: 'tooltip', animation: 'false' }
          .col-sm-7
            = f.text_field :name, { class: 'form-control' }
        .form-group
          = f.label :subject_count, class: "col-sm-4 control-label required"
          .col-sm-7
            = f.text_field :subject_count, { class: 'form-control', value: '' }
        .form-group
          = f.label :visit_count, class: "col-sm-4 control-label required"
          .col-sm-7
            = f.text_field :visit_count, { class: 'form-control', value: '' }
      .modal-footer
        .center-block
          %button.btn.btn-default{ type: 'button', data: { dismiss: 'modal' } }
            = t(:actions)[:close]
          %input.btn.btn-primary#add_arm_form_button{ type: 'submit', value: t(:actions)[:add] }
