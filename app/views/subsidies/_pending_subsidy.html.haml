- if subsidy.present?
  .card
    .card-header.justify-content-between
      %h4.mb-0
        = t(:subsidies)[:pending][:header]
    %table.table.table-condensed.pending-subsidy-table
      %thead.bg-light
        %tr.default
          %th
            = t(:subsidies)[:pending][:request_cost]
          %th
            = t(:subsidies)[:pending][:percent]
          %th
            = t(:subsidies)[:pending][:pi_contribution]
          %th
            = t(:subsidies)[:pending][:cost]
          - if admin
            %th.text-center
              = t(:actions)[:approve]
          %th.text-center
            = t(:actions)[:actions]
      %tbody
        %tr
          %td.request-cost
            = number_to_currency(subsidy.total_request_cost/100.0)
          %td.subsidy-percent
            = display_as_percent(subsidy.percent_subsidy)
          %td.subsidy-contribution
            = number_to_currency(subsidy.pi_contribution/100.0)
          %td.subsidy-effective-current-cost
            = number_to_currency(subsidy.current_cost)
          - if admin
            %td.text-center.approve-subsidy
              = link_to icon('fas', 'check'), approve_dashboard_subsidy_path(subsidy), remote: true, class: "btn btn-success approve-subsidy-button"
          %td.text-center.subsidy-actions
            = link_to icon('far', 'edit'), edit_subsidy_path(subsidy, srid: service_request.id, admin: admin), remote: true, class: "btn btn-warning edit-subsidy-button mr-1"
            = link_to icon('fas', 'trash-alt'), subsidy_path(subsidy, srid: service_request.id, admin: admin), method: :delete, remote: true, class: "btn btn-danger delete-subsidy-button", data: { confirm_swal: 'true' }

- else
  .col-xs-12
    - if in_dashboard?
      = link_to t(:subsidies)[:add], new_dashboard_subsidy_path(ssrid: sub_service_request.id, admin: admin), remote: true, class: "btn btn-success", title: t(:subsidies)[:tooltips][:request_subsidy], data: { toggle: 'tooltip', placement: 'right' }
    - else
      = link_to t(:subsidies)[:add], new_subsidy_path(ssrid: sub_service_request.id, srid: service_request.id), remote: true, class: "btn btn-success", title: t(:subsidies)[:tooltips][:request_subsidy], data: { toggle: 'tooltip', placement: 'right' }
